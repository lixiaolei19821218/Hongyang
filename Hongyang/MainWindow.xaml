<Window x:Class="Hongyang.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hongyang"
        mc:Ignorable="d"
        Title="自动检测" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label>刀具直径</Label>
        <TextBox Grid.Column="1" Name="tbxDiameter"></TextBox>
        <Label Grid.Row="1">刀柄长度</Label>
        <TextBox Grid.Row="1" Grid.Column="1" Name="tbxShankLength" ></TextBox>
        <Label Grid.Row="2">伸出长度</Label>
        <TextBox Grid.Row="2" Grid.Column="1" Name="tbxOverhang" ></TextBox>
        <Button Grid.Row="5" Grid.ColumnSpan="2" Click="Button_Click">计算</Button>
    </Grid>
</Window>
