<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hongyang"
      xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="Hongyang.ToolAxOVec"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ToolAxOVec">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <CheckBox Margin="5" Content="使用在仿真过程中计算的方向矢量"/>
        <StackPanel Margin="5" Grid.Row="1">
            <Label Content="建议的方向"/>
            <ComboBox Width="120" HorizontalAlignment="Left">
                <ComboBoxItem Tag="0">自由</ComboBoxItem>
                <ComboBoxItem Tag="1">极坐标</ComboBoxItem>
                <ComboBoxItem Tag="2">行程方向</ComboBoxItem>
                <ComboBoxItem Tag="3">固定方向</ComboBoxItem>
            </ComboBox>
        </StackPanel>
    </Grid>
</Page>
